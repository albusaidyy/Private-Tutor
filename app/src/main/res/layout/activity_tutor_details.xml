<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    tools:context=".TutorDetailsActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgTutor"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/tutorprofile"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="5dp" />
                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/Ed_name"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="First Name Last Name"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/gen"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Gender:" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:entries="@array/gender_type"

                    />

            </LinearLayout>


            <EditText
                android:id="@+id/Ed_institution"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="Institution"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/Ed_about"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="About"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/Ed_subject"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="Subject"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/Ed_mobile"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="+254"
                android:inputType="number" />


            <EditText
                android:id="@+id/Ed_price"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="Price"
                android:inputType="number" />


            <EditText
                android:id="@+id/Ed_link"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="paste link"
                android:inputType="text" />


            <LinearLayout
                android:id="@+id/status"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/Ed_link">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Status:"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/tutor_status_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:entries="@array/tutor_status"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:text="UPDATE"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:text="DELETE"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>




        </LinearLayout>
</androidx.core.widget.NestedScrollView>