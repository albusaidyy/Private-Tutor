<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context=".TutorDetailsActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:orientation="vertical">



            <EditText
                android:id="@+id/Ed_name"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="First Name Last Name"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/gen"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Gender:" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:entries="@array/gender_type"

                    />

            </LinearLayout>


            <EditText
                android:id="@+id/Ed_institution"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="Institution"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/Ed_about"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="About"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/Ed_subject"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="Subject"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/Ed_mobile"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="+254"
                android:inputType="number" />


            <EditText
                android:id="@+id/Ed_price"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="Price"
                android:inputType="number" />

            <EditText
                android:id="@+id/Ed_link"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:hint="https..."
                android:inputType="text" />


            <LinearLayout
                android:id="@+id/status"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/Ed_link">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Status:"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/tutor_status_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:entries="@array/tutor_status" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:text="ADD"
                    android:textColor="@color/cardview_light_background" />


            </LinearLayout>


        </LinearLayout>
</androidx.core.widget.NestedScrollView>